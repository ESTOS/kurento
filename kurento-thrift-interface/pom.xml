	<groupId>org.kurento</groupId>
	<artifactId>kurento-thrift-interface</artifactId>
	<packaging>jar</packaging>
	<name>Kurento Thrift</name>
	<description>
			Implementation of JSON-RPC with Thrift transport to communicate 
			Kurento Control Server with Kurento Media Server.
	</description>
	<url>http://www.kurento.org/docs/${project.version}</url>

	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
