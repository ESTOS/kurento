<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.kurento</groupId>
		<artifactId>kmf-parent-pom</artifactId>
		<version>4.2.3-SNAPSHOT</version>
	</parent>

	<groupId>com.kurento.kmf</groupId>
	<artifactId>kmf-system-test</artifactId>
	<version>${project.parent.version}</version>
	<packaging>jar</packaging>

	<properties>

		<!-- Test Dependencies Versions -->
		<selenium-java.version>2.41.0</selenium-java.version>
		<xml-apis.version>1.4.01</xml-apis.version>
		<jetty-server.vesion>9.1.3.v20140225</jetty-server.vesion>

		<!-- Webdrivers versions -->
		<linux32-webdriver.version>2.9</linux32-webdriver.version>
		<linux64-webdriver.version>2.9</linux64-webdriver.version>
		<mac32-webdriver.version>2.9</mac32-webdriver.version>
		<win32-webdriver.version>2.9</win32-webdriver.version>

	</properties>

	<name>Kurento Media Framework - System Tests</name>
	<description>
		Kurento Media Framework - System Tests

		The kmf-system-test project contains some test cases
		for testing Kurento Media Framework and Kurento Media Server.
	</description>

	<dependencies>
		<!-- Spring boot -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
			<version>1.0.0.RC1</version>
		</dependency>
		<!-- End Spring boot -->

		<!-- Kurento Dependencies -->
		<dependency>
			<groupId>com.kurento.kmf</groupId>
			<artifactId>kmf-content-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.kurento.kws</groupId>
			<artifactId>kws-content-api</artifactId>
		</dependency>

		<!-- JUnit -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>

		<!-- Jetty -->
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-server</artifactId>
			<version>${jetty-server.vesion}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-util</artifactId>
			<version>${jetty-server.vesion}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-webapp</artifactId>
			<version>${jetty-server.vesion}</version>
		</dependency>

		<!-- Tomcat <dependency> <groupId>org.apache.tomcat.embed</groupId> <artifactId>tomcat-embed-core</artifactId> 
			<version>${tomcat-embed.version}</version> </dependency> -->

		<!-- Selenium -->
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>${selenium-java.version}</version>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
			<version>${xml-apis.version}</version>
		</dependency>
	</dependencies>

	<profiles>
		<!-- Webdrivers for Chrome (binary dependencies in the repository) -->
		<profile>
			<id>mac</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack</id>
								<phase>process-test-classes</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>com.google.webdriver</groupId>
											<artifactId>mac32</artifactId>
											<version>${mac32-webdriver.version}</version>
											<type>zip</type>
											<overWrite>false</overWrite>
											<outputDirectory>${basedir}/target/webdriver</outputDirectory>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>linux32</id>
			<activation>
				<os>
					<family>linux</family>
					<arch>i386</arch>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack</id>
								<phase>process-test-classes</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>com.google.webdriver</groupId>
											<artifactId>linux32</artifactId>
											<version>${linux32-webdriver.version}</version>
											<type>zip</type>
											<overWrite>false</overWrite>
											<outputDirectory>${basedir}/target/webdriver</outputDirectory>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>linux64</id>
			<activation>
				<os>
					<family>linux</family>
					<arch>amd64</arch>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack</id>
								<phase>process-test-classes</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>com.google.webdriver</groupId>
											<artifactId>linux64</artifactId>
											<version>${linux64-webdriver.version}</version>
											<type>zip</type>
											<overWrite>false</overWrite>
											<outputDirectory>${basedir}/target/webdriver</outputDirectory>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack</id>
								<phase>process-test-classes</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>com.google.webdriver</groupId>
											<artifactId>win32</artifactId>
											<version>${win32-webdriver.version}</version>
											<type>zip</type>
											<overWrite>false</overWrite>
											<outputDirectory>${basedir}/target/webdriver</outputDirectory>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!-- /Webdrivers for Chrome (binary dependencies in the repository) -->
	</profiles>

	<!-- Add Spring repositories for Spring Boot -->
	<repositories>
		<repository>
			<id>spring-snapshots</id>
			<url>http://repo.spring.io/snapshot</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>spring-milestones</id>
			<url>http://repo.spring.io/milestone</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>spring-snapshots</id>
			<url>http://repo.spring.io/snapshot</url>
		</pluginRepository>
		<pluginRepository>
			<id>spring-milestones</id>
			<url>http://repo.spring.io/milestone</url>
		</pluginRepository>
	</pluginRepositories>
</project>
